<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.example.chlorella.blindassist.CameraActivity.ColorDetectActivity">

    <TextureView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c_texture" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/activity_color_picker_pointer_ring"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/pointer_ring" />

        <View
            android:id="@+id/activity_color_picker_pointer"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:background="@drawable/pointer" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@android:color/background_dark"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:text="Capture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/c_capture"
                android:layout_weight="1"
                android:textColor="?android:attr/panelColorBackground"
                style="@style/Widget.AppCompat.Button" />

        </LinearLayout>

    </FrameLayout>
</RelativeLayout>